<div class="card-deck">
<div class="col-xl-4">
    <div class="card">
        <div class="card-min-height-50vh">
            <div class="card-header ">
                <h4 class="card-title">Sellers</h4>
                <p class="card-category">Total</p>
            </div>
            <div class="card-body table-full-width table-responsive">
              <div class="padding_5">
                <%= @users_count_sellers %>
              </div>
            </div>
        </div>
    </div>
</div>
<div class="col-xl-4">
    <div class="card">
        <div class="card-min-height-50vh">
            <div class="card-header ">
                <h4 class="card-title">Buyers</h4>
                <p class="card-category">Total</p>
            </div>
            <div class="card-body table-full-width table-responsive">
              <div class="padding_5">
                <%= @users_count_buyers %>
              </div>
            </div>
        </div>
    </div>
</div>
<div class="col-xl-12">
    <div class="card">
        <div class="card-min-height-50vh">
            <div class="card-header ">
                <h4 class="card-title">Users</h4>
                <p class="card-category">All Users</p>
            </div>
            <div class="card-body table-full-width table-responsive">
              <div class="padding_5">

                <table class="table">
                  <thead>
                    <tr>
                      <th class="center">#</th>
                      <th class="center">Name</th>
                      <th class="center">Approval Status</th>
                      <th class="center">Seller</th>
                      <th class="center">Admin</th>

                    </tr>
                  </thead>
                  <tbody>
                      <% @users.each do |user| %>
                      <tr>
                        <td><%= user.id %></td>
                        <td><%= user.email %></td>
                        <td><%= user.approved %></td>
                        <td>
                          <% if user.seller? %>
                            <p>Approved</p>
                            <% else %>
                              <%= form_for user, remote: true do |f| %>
                              <%= f.hidden_field :seller, value: true %>
                              <%= f.submit "Approve User", data: {confirm: "Are you sure?"}, class: "form-control" %>
                            <% end %>
                          <% end %>
                      </td>
                        <td>
                          <% if user.admin == true %>
                            <p>Approved</p>
                            <% else %>
                              <%= form_for user, remote: true do |f| %>
                              <%= f.hidden_field :admin, value: true %>
                              <%= f.submit "Approve User", data: {confirm: "Are you sure?"}, class: "form-control" %>
                            <% end %>
                          <% end %>
                      </td>
                    </tr>
                  </tbody>
                  <% end %>
                </table>


              </div>
            </div>
        </div>
    </div>
</div>
</div>
